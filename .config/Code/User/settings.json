{
  "workbench.colorTheme": "Default Dark+",
  "workbench.startupEditor": "none",

  // python
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnSave": true,
    "editor.rulers": [140],
    "editor.insertSpaces": true,
    "editor.tabSize": 4,
    "editor.codeActionsOnSave": {
      "source.organizeImports": true
    }
  },
  "python.formatting.blackArgs": ["--skip-string-normalization", "--line-length", "140"],
  "python.formatting.provider": "black",
  "python.analysis.typeCheckingMode": "off",
  "python.linting.enabled": false,
  "python.condaPath": "/home/lukas/miniconda3/condabin/conda",
  "python.defaultInterpreterPath": "/home/lukas/miniconda3/envs/tf/bin/python3",
  "python.pythonPath": "/home/lukas/miniconda3/envs/tf/bin/python3",
  "python.languageServer": "Pylance",
  "python.analysis.extraPaths": ["venv"],
  "python.analysis.autoSearchPaths": true,
  "python.analysis.diagnosticSeverityOverrides": {
    "reportOptionalMemberAccess": "information",
    "reportGeneralTypeIssues": "error"
  },

  "isort.args": ["--profile", "black"],

  // dart
  "[dart]": {
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.rulers": [140],
    "editor.selectionHighlight": false,
    "editor.suggest.snippetsPreventQuickSuggestions": false,
    "editor.suggestSelection": "first",
    "editor.tabCompletion": "onlySnippets",
    "editor.wordBasedSuggestions": false
  },
  "dart.lineLength": 140,
  "dart.showInspectorNotificationsForWidgetErrors": false,

  // env formatting
  "prettier.printWidth": 200,
  "editor.tabSize": 4,
  "editor.renderWhitespace": "all",
  "editor.hideCursorInOverviewRuler": true,
  "editor.wordWrapColumn": 140,
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "files.autoSave": "onWindowChange",

  // vim
  "vim.otherModesKeyBindingsNonRecursive": [
    {
      "before": ["="],
      "after": [],
      "commands": [
        {
          "command": "editor.action.reindentlines",
          "args": []
        }
      ]
    }
  ],
  "vim.handleKeys": {
    "<C-w>": false,
    "<C-a>": false
  },

  "git.autofetch": true,
  "cmake.configureOnOpen": false,
  "terminal.integrated.shellIntegration.enabled": false,
  "editor.lineNumbers": "relative",
  "terminal.integrated.inheritEnv": false,
  "python.analysis.autoImportCompletions": true
}
